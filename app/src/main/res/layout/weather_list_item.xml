<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/line_margin_start"
        android:layout_marginEnd="@dimen/line_margin_end"
        android:background="@color/weather_list_item_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/container_item_margin_bottom">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2">

            <ImageView
                android:contentDescription="@string/icon_weather"
                android:id="@+id/iv_weather_icon"
                android:layout_width="@dimen/weather_icon_small_width"
                android:layout_height="@dimen/weather_icon_small_height"
                android:scaleType="centerCrop"
                tools:background="@drawable/ic_clear_sky_sun" />


        </LinearLayout>


        <TextView
            android:id="@+id/tv_day"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:text="Wednesday" />


        <TextView

            android:id="@+id/tv_temperature"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center_vertical|center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:text="24Â°C" />

    </LinearLayout>




</LinearLayout>


