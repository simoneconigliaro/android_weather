<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_main_relative_layout">

    <TextView
        android:id="@+id/tv_detail_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        tools:text="London" />

    <TextView
        android:id="@+id/tv_detail_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_detail_location"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:text="Wed, 02 October" />

    <LinearLayout
        android:gravity="center"
        android:layout_below="@id/tv_detail_day"
        android:id="@+id/layout_container_sunrise_sunset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_sunrise"/>

        <TextView
            android:gravity="end"
            android:id="@+id/tv_detail_sunrise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:text="05:55" />

        <TextView
            android:gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text=" - " />

        <TextView
            android:gravity="start"
            android:id="@+id/tv_detail_sunset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:text="18:00" />
    </LinearLayout>



    <ImageView
        android:id="@+id/iv_detail_weather_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/layout_container_sunrise_sunset"
        tools:background="@drawable/ic_clear_sky_sun" />

    <TextView
        android:gravity="center"
        android:layout_alignStart="@id/iv_detail_weather_icon"
        android:layout_alignEnd="@id/iv_detail_weather_icon"
        android:id="@+id/tv_detail_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_detail_weather_icon"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:text="Clear sky" />

    <TextView
        android:id="@+id/tv_detail_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_container_sunrise_sunset"
        android:layout_toEndOf="@id/iv_detail_weather_icon"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        tools:text="19°C" />


    <LinearLayout
        android:id="@+id/layout_container_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_detail_temperature"
        android:layout_toEndOf="@id/iv_detail_weather_icon"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_drop_down"
            android:scaleType="center" />

        <TextView
            android:id="@+id/tv_detail_temp_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:text="10°C" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_drop_up"
            android:scaleType="center" />

        <TextView
            android:id="@+id/tv_detail_temp_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:text="20°C" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_detail_humidity_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_container_temperature"
        android:layout_marginEnd="@dimen/margin_right_label"
        android:layout_toEndOf="@id/iv_detail_weather_icon"
        android:text="@string/humidity"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/tv_detail_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_container_temperature"
        android:layout_toEndOf="@id/tv_detail_humidity_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="63%" />

    <TextView
    android:id="@+id/tv_detail_pressure_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/tv_detail_humidity_label"
    android:layout_marginEnd="@dimen/margin_right_label"
    android:layout_toEndOf="@id/iv_detail_weather_icon"
    android:text="@string/pressure"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/tv_detail_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_detail_humidity"
        android:layout_toEndOf="@id/tv_detail_pressure_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="1015 hPa" />

    <TextView
        android:id="@+id/tv_detail_wind_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_detail_pressure_label"
        android:layout_marginEnd="@dimen/margin_right_label"
        android:layout_toEndOf="@id/iv_detail_weather_icon"
        android:text="@string/wind"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/tv_detail_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_detail_pressure"
        android:layout_toEndOf="@id/tv_detail_wind_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="1.2 m/s" />


</RelativeLayout>